<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/airlineLogo"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="5dp"
        android:contentDescription="@string/app_name"
        android:paddingLeft="10dp"
        android:src="@drawable/airline_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="@dimen/text_cell_padding"
        android:paddingRight="@dimen/text_cell_padding" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="2dp"
                android:src="@drawable/flight_number_icon" />

            <TextView
                android:id="@+id/flightNum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingRight="@dimen/text_cell_padding"
                android:text="TextView"
                android:textColor="@color/text_color_orange"
                android:textSize="@dimen/text_flight_number_size"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/text_cell_padding"
                android:text="@string/flight_from"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />

            <TextView
                android:id="@+id/cityOrigin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/text_cell_padding"
                android:singleLine="true"
                android:text="TextView"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/text_cell_padding"
                android:text="@string/scheduled_arrival"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />

            <TextView
                android:id="@+id/scheduledTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:paddingRight="@dimen/text_cell_padding"
                android:text="@string/estimating_arrival"
                android:textColor="@color/text_color_gray" />

            <TextView
                android:id="@+id/currentTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="TextView"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/text_cell_padding"
                android:text="@string/terminal"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />

            <TextView
                android:id="@+id/terminalNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:textColor="@color/text_color_gray"
                android:textSize="@dimen/text_flight_number_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/showPlanePosition"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:background="@drawable/button_show_plane_location" />

            <ImageButton
                android:id="@+id/shareFlight"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="25dp"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/app_name"
                android:background="@drawable/button_share_grey" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="12dp"
            android:src="@drawable/arrive_ontime_image_tablet" />

        <TextView
            android:id="@+id/flightRemark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:paddingLeft="@dimen/text_cell_padding"
            android:paddingRight="@dimen/text_cell_padding"
            android:textColor="@color/text_color_green"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>